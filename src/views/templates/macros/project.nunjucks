{% macro project(project='') %}
{{this}}
<div class="project">
  <a href="{{ project.link }}">
    <img src="{{ project.image }}" />
    <h2>{{ project.name }}</h2>
    <p class="description">{{ project.description }}</p>
    <p class="skill-list">Project skill:
    {% for skill in project.skills %}
      <span class="skill">{{ skill }}</span>
    {% endfor %}
    </p>
  </a>
</div>
{% endmacro %}
